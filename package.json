{
  "name": "destroyer",
  "version": "0.2.2-alpha",
  "description": "lossless audio player",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint . --ignore-pattern bundle || true",
    "clean": "rm -r bundle || true",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=development webpack --progress",
    "build:watch": "npm run build -- --watch",
    "start": "electron index.js",
    "pack:osx": "rm -rf Destroyer-Mac && NODE_ENV=production webpack --progress -p && electron-packager ./ Destroyer --platform=darwin --arch=x64 --icon=icons.icns --prune",
    "pack:windows": "rm -rf Destroyer-Windows && NODE_ENV=production webpack --progress -p && electron-packager ./ Destroyer --platform=win32 --arch=x64 --icon=icons.icns --prune",
    "pack:linux": "rm -rf Destroyer-Linux && NODE_ENV=production webpack --progress -p && electron-packager ./ Destroyer --platform=linux --arch=x64 --icon=icons.icns --prune"
  },
  "author": "omar mashaal",
  "license": "ISC",
  "dependencies": {
    "electron-window-state": "^3.0.4",
    "fuzzy-search": "^1.3.5",
    "in-view": "^0.4.3",
    "key": "^0.1.11",
    "leftpad": "0.0.0",
    "moment": "^2.15.0",
    "musicmetadata": "^2.0.4",
    "radium": "^0.18.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "redux": "^3.6.0",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "electron": "^1.4.0",
    "electron-packager": "^8.0.0",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.2.2",
    "eslint-plugin-standard": "^2.0.0",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "imports-loader": "^0.6.5",
    "redux-thunk": "^2.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-new": 1,
      "valid-jsdoc": [
        2,
        {
          "requireReturn": false,
          "prefer": {
            "return": "returns"
          }
        }
      ]
    }
  }
}
