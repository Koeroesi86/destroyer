{
  "name": "destroyer",
  "version": "0.2.0",
  "description": "lossless, streaming, audio player",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint . --ignore-pattern bundle || true",
    "clean": "rm -r bundle || true",
    "prebuild": "npm run clean",
    "build": "webpack -p --progress",
    "build:watch": "npm run build -- --watch",
    "start": "electron index.js",
    "pack:osx": "rm -rf Destroyer-darwin-x64 && webpack --progress -p && electron-packager ./ Destroyer --platform=darwin --arch=x64 --icon=icons.icns --prune"
  },
  "author": "omar mashaal",
  "license": "ISC",
  "dependencies": {
    "domready": "^1.0.8",
    "electron-window-state": "^3.0.3",
    "fuzzy-search": "^1.3.5",
    "key": "^0.1.11",
    "leftpad": "0.0.0",
    "moment": "^2.13.0",
    "musicmetadata": "^2.0.4",
    "radium": "^0.18.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "redux": "^3.5.2",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.6",
    "eslint": "^2.9.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-react": "^2.5.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-plugin-standard": "^1.3.2",
    "exports-loader": "^0.6.3",
    "imports-loader": "^0.6.5",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-new": 1,
      "valid-jsdoc": [
        2,
        {
          "requireReturn": false,
          "prefer": {
            "return": "returns"
          }
        }
      ]
    }
  }
}
